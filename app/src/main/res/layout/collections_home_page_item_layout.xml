<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/dimen_15dp"
    android:paddingTop="@dimen/dimen_5dp">

    <ImageView
        android:id="@+id/itemIcon"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        android:contentDescription="@string/icon"
        android:layout_marginTop="@dimen/dimen_5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_fontisto_shopping_pos_machine" />

    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/onboard_merchant"
        app:layout_constraintBottom_toBottomOf="@+id/itemIcon"
        app:layout_constraintEnd_toStartOf="@+id/goToDetailsArrow"
        app:layout_constraintStart_toEndOf="@+id/itemIcon"
        app:layout_constraintTop_toTopOf="@+id/itemIcon" />

    <ImageView
        android:id="@+id/goToDetailsArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/goToDetails"
        app:layout_constraintBottom_toBottomOf="@+id/itemTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemTitle"
        app:srcCompat="@drawable/ic_chevron_down" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_2dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:background="@color/lekan_grey_color"
        android:layout_marginBottom="@dimen/dimen_5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/goToDetailsArrow"
        app:layout_constraintStart_toStartOf="@+id/itemIcon"
        app:layout_constraintTop_toBottomOf="@+id/itemIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>
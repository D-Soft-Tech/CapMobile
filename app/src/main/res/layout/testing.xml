<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/accountsCard"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="@dimen/dimen_90dp"
            app:cardCornerRadius="@dimen/dimen_10dp"
            app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/card_bg_color"
                android:padding="@dimen/dimen_10dp">

                <ImageView
                    android:id="@+id/accounts_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_accounts" />

                <TextView
                    android:id="@+id/accountsTv"
                    style="@style/pageSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_1dp"
                    android:text="@string/accounts"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/accounts_icon"
                    app:layout_constraintStart_toStartOf="@+id/accounts_icon"
                    app:layout_constraintTop_toBottomOf="@+id/accounts_icon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/collectionCd"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="@dimen/dimen_90dp"
            app:cardCornerRadius="@dimen/dimen_10dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline18"
            app:layout_constraintTop_toTopOf="@+id/accountsCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/card_bg_color"
                android:padding="@dimen/dimen_10dp">

                <ImageView
                    android:id="@+id/collectionsIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_collection_icon" />

                <TextView
                    android:id="@+id/collectionTV"
                    style="@style/pageSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/collections"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/collectionsIV"
                    app:layout_constraintStart_toStartOf="@+id/collectionsIV"
                    app:layout_constraintTop_toBottomOf="@+id/collectionsIV" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/hardCoreCV"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="@dimen/dimen_90dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:paddingVertical="@dimen/dimen_10dp"
            app:cardCornerRadius="@dimen/dimen_10dp"
            app:layout_constraintStart_toStartOf="@+id/guideline17"
            app:layout_constraintTop_toBottomOf="@+id/accountsCard">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/card_bg_color"
                android:padding="@dimen/dimen_10dp">

                <ImageView
                    android:id="@+id/hardcoreIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_hard_core" />

                <TextView
                    android:id="@+id/hardcoreTv"
                    style="@style/pageSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hard_core"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/hardcoreIv"
                    app:layout_constraintStart_toStartOf="@+id/hardcoreIv"
                    app:layout_constraintTop_toBottomOf="@+id/hardcoreIv" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/openAndReactivateCv"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="@dimen/dimen_90dp"
            android:paddingVertical="@dimen/dimen_10dp"
            app:cardCornerRadius="@dimen/dimen_10dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline18"
            app:layout_constraintTop_toTopOf="@+id/hardCoreCV">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/card_bg_color"
                android:padding="@dimen/dimen_10dp">

                <ImageView
                    android:id="@+id/openAndReactivateIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_open_and_reactivate_acc" />

                <TextView
                    android:id="@+id/openAndReactivateTv"
                    style="@style/pageSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/openAndReactivateAcc"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/openAndReactivateIv"
                    app:layout_constraintStart_toStartOf="@+id/openAndReactivateIv"
                    app:layout_constraintTop_toBottomOf="@+id/openAndReactivateIv" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.11" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.89" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
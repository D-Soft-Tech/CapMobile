<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:alpha="0.85"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color_variant_1"
            android:padding="@dimen/dimen_20dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="@dimen/dimen_100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/lottiesuccess" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_10dp"
                android:fontFamily="@font/poppins"
                android:text="@string/account_created"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline5"
                app:layout_constraintEnd_toEndOf="@+id/animation_view"
                app:layout_constraintStart_toStartOf="@+id/animation_view"
                app:layout_constraintTop_toBottomOf="@+id/animation_view" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_2dp"
                android:background="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/guideline5"
                tools:layout_editor_absoluteX="0dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/account"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp"
                app:layout_constraintStart_toStartOf="@+id/view2"
                app:layout_constraintTop_toTopOf="@+id/guideline5" />

            <View
                android:id="@+id/view3"
                android:layout_width="@dimen/dimen_180dp"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/account_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:fontFamily="@font/poppins"
                android:text="@string/account_num"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@+id/view3"
                app:layout_constraintTop_toBottomOf="@+id/view3" />

            <TextView
                android:id="@+id/account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:fontFamily="@font/poppins"
                android:text="@string/account_name"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/account_num"
                app:layout_constraintTop_toBottomOf="@id/account_num" />

            <TextView
                android:id="@+id/account_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:fontFamily="@font/poppins"
                android:text="@string/account_type"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/account_name"
                app:layout_constraintTop_toBottomOf="@id/account_name" />

            <TextView
                android:id="@+id/account_officer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/account_officer"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp"
                app:layout_constraintStart_toStartOf="@+id/account_type"
                app:layout_constraintTop_toBottomOf="@+id/account_type" />

            <View
                android:id="@+id/section2"
                android:layout_width="@dimen/dimen_180dp"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/account_officer"
                app:layout_constraintTop_toBottomOf="@+id/account_officer" />

            <TextView
                android:id="@+id/account_officer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:fontFamily="@font/poppins"
                android:text="@string/name_of_account_officer"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/section2"
                app:layout_constraintTop_toBottomOf="@id/section2" />

            <TextView
                android:id="@+id/account_officer_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:fontFamily="@font/poppins"
                android:text="@string/phone_number_of_account_officer"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/account_officer_name"
                app:layout_constraintTop_toBottomOf="@id/account_officer_name" />

            <TextView
                android:id="@+id/atmLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/atm_details"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_18sp"
                app:layout_constraintStart_toStartOf="@+id/account_officer_phone_number"
                app:layout_constraintTop_toBottomOf="@+id/account_officer_phone_number" />

            <View
                android:id="@+id/section3"
                android:layout_width="@dimen/dimen_180dp"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/atmLabel"
                app:layout_constraintTop_toBottomOf="@+id/atmLabel" />

            <TextView
                android:id="@+id/atmType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15dp"
                android:fontFamily="@font/poppins"
                android:text="@string/atmType"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/section3"
                app:layout_constraintTop_toBottomOf="@id/section3" />

            <TextView
                android:id="@+id/atm_pick_up_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:fontFamily="@font/poppins"
                android:text="@string/pickup_branch"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/atmType"
                app:layout_constraintTop_toBottomOf="@id/atmType"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/download_account_info"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_margin="@dimen/dimen_20dp"
                android:contentDescription="@string/icon_to_download"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/atm_pick_up_branch"
                app:srcCompat="@drawable/ic_baseline_download_24" />

            <ImageView
                android:id="@+id/share_account_info"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_margin="@dimen/dimen_20dp"
                android:contentDescription="@string/icon_to_share"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/animation_view"
                app:layout_constraintTop_toTopOf="@+id/animation_view"
                app:srcCompat="@drawable/ic_share" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>

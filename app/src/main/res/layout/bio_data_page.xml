<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.openAccountScreens.FragmentOpenAccount">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            app:cardBackgroundColor="@color/main_color_variant_1"
            app:cardElevation="@dimen/dimen_10dp"
            app:contentPadding="@dimen/dimen_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/surname_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:layout_marginHorizontal="@dimen/dimen_10dp"
                    android:text="@string/surname"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toTopOf="@+id/surname"
                    app:layout_constraintStart_toStartOf="@+id/surname"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/surname"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_45dp"
                    android:background="@drawable/til_bg"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dimen_20dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/surname_label"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/firstNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:text="@string/firstName"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/firstName"
                    app:layout_constraintTop_toBottomOf="@+id/surname" />

                <TextView
                    android:id="@+id/firstName"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_45dp"
                    android:background="@drawable/til_bg"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dimen_20dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/firstNameLabel"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/middleNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_10dp"
                    android:layout_marginVertical="@dimen/dimen_20dp"
                    android:text="@string/middleName"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/middleName"
                    app:layout_constraintTop_toBottomOf="@+id/firstName" />

                <TextView
                    android:id="@+id/middleName"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_45dp"
                    android:background="@drawable/til_bg"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dimen_20dp"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/middleNameLabel"
                    tools:ignore="RtlSymmetry" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/genderSelector"
                    style="@style/myTilStyleExposedDropDown"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_55dp"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/dateOfBirth">

                    <AutoCompleteTextView
                        android:id="@+id/auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="none"
                        android:hint="@string/hint_gender" />
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/dateOfBirthLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dimen_10dp"
                    android:layout_marginVertical="@dimen/dimen_20dp"
                    android:text="@string/dateOfBirth"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/dateOfBirth"
                    app:layout_constraintTop_toBottomOf="@+id/middleName" />

                <TextView
                    android:id="@+id/dateOfBirth"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimen_45dp"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:background="@drawable/til_bg"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dimen_20dp"
                    app:layout_constraintBottom_toBottomOf="@id/genderSelector"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/genderSelector"
                    app:layout_constraintTop_toBottomOf="@+id/dateOfBirthLabel"
                    tools:ignore="RtlSymmetry" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
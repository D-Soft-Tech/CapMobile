<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    style="@style/ShapeAppearance.App.SmallComponent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/dimen_10dp"
    tools:context=".ui.view.dialogFragments.DaoEngageIndividualDialogFragment">

        <TextView
            android:id="@+id/callTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_20dp"
            android:layout_marginVertical="@dimen/dimen_10dp"
            android:drawablePadding="@dimen/dimen_50dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_vertical"
            android:text="@string/call"
            android:textColor="@color/lekanColor"
            app:drawableEndCompat="@drawable/ic_round_call_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view5"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@color/lekanStrokeColor"
            app:layout_constraintEnd_toEndOf="@+id/callTv"
            app:layout_constraintStart_toStartOf="@+id/callTv"
            app:layout_constraintTop_toBottomOf="@+id/callTv" />

        <TextView
            android:id="@+id/engageTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:drawablePadding="@dimen/dimen_25dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_vertical"
            android:text="@string/engage"
            android:textColor="@color/lekanColor"
            app:drawableEndCompat="@drawable/ic_round_email_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/callTv"
            app:layout_constraintTop_toBottomOf="@+id/view5" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/lekanColor"
    android:paddingVertical="@dimen/dimen_10dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/signing_out"
        android:textSize="@dimen/dimen_18sp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:text="@string/signout_confirmation"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/textView32"
        app:layout_constraintStart_toStartOf="@+id/textView32"
        app:layout_constraintTop_toBottomOf="@+id/textView32" />

    <android.widget.Button
        android:id="@+id/noBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_margin="@dimen/dimen_10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/no"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/vvt"
        app:layout_constraintStart_toStartOf="@+id/vhr"
        app:layout_constraintTop_toBottomOf="@+id/vhr" />

    <android.widget.Button
        android:id="@+id/yesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:fontFamily="@font/poppins_bold"
        android:layout_margin="@dimen/dimen_10dp"
        android:text="@string/yes"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/vhr"
        app:layout_constraintStart_toEndOf="@+id/vvt"
        app:layout_constraintTop_toBottomOf="@+id/vhr" />

    <View
        android:id="@+id/vhr"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginHorizontal="@dimen/dimen_30dp"
        app:layout_constraintEnd_toEndOf="@+id/textView33"
        app:layout_constraintStart_toStartOf="@+id/textView33"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

    <View
        android:id="@+id/vvt"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/dimen_30dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/noBtn"
        app:layout_constraintEnd_toEndOf="@+id/vhr"
        app:layout_constraintStart_toStartOf="@+id/vhr"
        app:layout_constraintTop_toBottomOf="@+id/vhr" />
</androidx.constraintlayout.widget.ConstraintLayout>
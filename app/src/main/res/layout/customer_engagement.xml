<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.customerEngagement.CustomerEngagement">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:padding="@dimen/dimen_20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:contentDescription="@string/back_arrow"
                android:src="@drawable/ic_android_studio_back_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/heading"
                style="@style/headingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_40dp"
                android:text="@string/refer_a_friend"
                app:layout_constraintBottom_toBottomOf="@+id/imageButton"
                app:layout_constraintStart_toEndOf="@+id/imageButton"
                app:layout_constraintTop_toTopOf="@+id/imageButton" />

            <TextView
                android:id="@+id/bylevellabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_50dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/by_levels"
                android:textColor="@color/new_main_color"
                app:layout_constraintBottom_toBottomOf="@+id/switch1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/switch1" />

            <TextView
                android:id="@+id/byTransactionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_30dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/by_transaction"
                android:textColor="@color/new_main_color"
                app:layout_constraintBottom_toBottomOf="@+id/switch1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/switch1" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                app:layout_constraintEnd_toStartOf="@+id/byTransactionLabel"
                app:layout_constraintHorizontal_bias="0.61"
                app:layout_constraintStart_toEndOf="@+id/bylevellabel"
                app:layout_constraintTop_toBottomOf="@+id/heading" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutChooseAccount"
                style="@style/account_summary_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/switch1">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="none"
                    android:paddingHorizontal="@dimen/dimen_20dp"
                    tools:ignore="LabelFor"
                    tools:text="Select An option" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:contentDescription="@string/editIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutChooseAccount"
                app:srcCompat="@drawable/ic_edit" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/textInputLayoutOptionalMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="@color/white"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/textInputLayoutChooseAccount"
                app:layout_constraintStart_toStartOf="@+id/textInputLayoutChooseAccount"
                app:layout_constraintTop_toBottomOf="@+id/imageView4">

                <include
                    android:id="@+id/nestedEditor"
                    layout="@layout/rich_text_editor_layout"
                    tools:layout_editor_absoluteX="-84dp"
                    tools:layout_editor_absoluteY="0dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginStart="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:contentDescription="@string/emailButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutOptionalMessage"
                app:srcCompat="@drawable/ic_email" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/dimen_30dp"
                android:contentDescription="@string/pushNotification"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintEnd_toStartOf="@+id/imageView7"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5"
                app:srcCompat="@drawable/whats_app" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/dimen_30dp"
                android:contentDescription="@string/pushNotification"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView6"
                app:srcCompat="@drawable/ic_push_notification" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>
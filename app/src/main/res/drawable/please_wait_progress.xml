<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="360"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="0">

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="8"
        android:useLevel="false">

        <size
            android:height="76dp"
            android:width="76dp" />

        <gradient
            android:angle="0"
            android:endColor="#00ffffff"
            android:useLevel="false"
            android:type="sweep"
            android:startColor="@color/main_color_variant_1"/>
    </shape>

</rotate>
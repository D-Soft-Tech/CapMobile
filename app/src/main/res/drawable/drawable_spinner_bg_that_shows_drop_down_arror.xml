<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="@color/white">
                </solid>

                <corners android:radius="10dp" />

                <padding
                    android:bottom="1dp"
                    android:left="5dp"
                    android:right="3dp"
                    android:top="1dp" />
                <stroke
                    android:width="1dp"
                    android:color="@color/white"/>
            </shape>
        </item>
        <item >
            <bitmap android:gravity="center|right"
                android:src="@drawable/ic_drop_down_png_image" />
        </item>
    </layer-list></item>
</selector>
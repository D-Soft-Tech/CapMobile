<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CapMobile" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/main_color</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Change the color of the toggle icon in navigation bar to white -->
    <style name="toolbarToggleIconColor" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="colorControlNormal">@color/white</item>
        <item name="spinBars">true</item>
        <item name="itemIconTint">@color/white</item>
        <item name="color">@color/white</item>
    </style>

    <style name="details_texts" parent="Theme.CapMobile">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="title_text" parent="Theme.CapMobile">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/main_color_variant_1</item>
        <item name="android:textSize">@dimen/dimen_26sp</item>
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_layout_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="textInputLayout2" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/main_color</item>
    </style>

    <style name="text_general" parent="Theme.CapMobile">
        <item name="android:statusBarColor">@color/main_color</item>
    </style>

    <style name="headingText" parent="Theme.CapMobile">
        <item name="android:textColor">@color/new_main_color</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/dimen_20sp</item>
    </style>

    <style name="headingText2" parent="Theme.CapMobile">
        <item name="android:textColor">@color/main_color_2</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/dimen_26sp</item>
    </style>

    <style name="pageSubTitle" parent="Theme.CapMobile">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/main_color_2</item>
    </style>

    <style name="reuseableFairPayBtn" parent="Theme.CapMobile">
        <item name="android:background">@drawable/reuseable_btn_bg</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="borderedBtn" parent="Theme.CapMobile">
        <item name="android:background">@drawable/bordered_button</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/lekanColor</item>
    </style>

    <style name="switch_style" parent="Theme.MaterialComponents">
        <item name="colorOnSurface">@color/lekan_background_color</item>
        <item name="colorSecondary">@color/lekanColor60Alpha</item>
        <item name="trackColor">@color/switch_toggle_color</item>
    </style>

    <style name="text_editor_tool_bar_button_style" parent="Theme.CapMobile">
        <item name="android:layout_width">@dimen/dimen_40dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="appBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/curved_top_sheet_bottom_sheet</item>
    </style>

    <style name="lakanButtonStyle" parent="Theme.CapMobile">
        <item name="android:background">@drawable/lekan_btn_bg</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/lekanColor</item>
    </style>

    <!-- THEME FOR MATERIAL DATE PICKER -->
    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/lekanColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/lekanColor</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <!-- Customize text field of the text input mode. -->
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
    </style>

    <style name="lakanButtonStyleFilledWithBlueColor" parent="Theme.CapMobile">
        <item name="android:background">@drawable/lekan_btn_bg_2</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="referBtn" parent="Theme.CapMobile" >
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="btn_general" parent="Theme.CapMobile">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="myTilStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/til_new_bg_3</item>
        <item name="boxStrokeColor">#0000ffff</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="lekanTilStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/lekan_et_bg</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:paddingRight">@dimen/dimen_10dp</item>
        <item name="android:paddingStart">@dimen/dimen_10dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="lekanTilStyle2" parent="lekanTilStyle">
        <item name="android:background">@drawable/lekan_et_bg2</item>
    </style>

    <style name="lekanTilStyleForSuccess" parent="lekanTilStyle">
        <item name="android:background">@drawable/lekan_et_bg_for_success_border</item>
    </style>

    <style name="lekanTilStyleForErrorBorder" parent="lekanTilStyle">
        <item name="android:background">@drawable/lekan_et_bg_for_error_border</item>
    </style>

    <style name="lekanAccountOpeningDocumentationStyle" parent="lekanTilStyle">
        <item name="android:background">@drawable/lekan_til_documentation_bg</item>
    </style>

    <style name="lekanAccountOpeningDocumentationErrorStyle" parent="lekanTilStyle">
        <item name="android:background">@drawable/documentation_input_error_bg</item>
    </style>

    <style name="lekanAccountOpeningDocumentationSuccessStyle" parent="lekanTilStyle">
        <item name="android:background">@drawable/documentation_input_success_bg</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
        <item name="android:width">@dimen/dimen_150dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="lekanDropDownMenuStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:background">@drawable/lekan_et_bg2</item>
        <item name="boxStrokeColor">@color/transparent</item>
        <item name="android:paddingStart">@dimen/dimen_10dp</item>
        <item name="android:paddingRight">@dimen/dimen_10dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="myTilStyle2" parent="myTilStyle">
        <item name="android:background">@drawable/til_new_bg_2</item>
    </style>

    <style name="lekan_txt_view_label" parent="Theme.CapMobile">
        <item name="android:textColor">@color/lekanColor</item>
    </style>

    <style name="hr_bar_chart_value_txt_style" parent="Theme.CapMobile">
        <item name="android:textColor">@color/lekanColor</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/dimen_12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="myTilStyleExposedDropDown" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:background">@drawable/til_new_bg</item>
        <item name="boxStrokeColor">#0000ffff</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="account_summary_dropdown" parent="myTilStyleExposedDropDown">
        <item name="android:background">@drawable/til_new_bg_3</item>
    </style>

    <style name="account_summary_dropdown_with_ash_bg" parent="myTilStyleExposedDropDown">
        <item name="android:background">@drawable/til_new_bg</item>
    </style>

    <style name="dialogAnimation" parent="Theme.CapMobile">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="slideInFromRight" parent="Theme.CapMobile">
        <item name="android:windowEnterAnimation">@anim/slide_in_right_for_dao_menu_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right_for_dao_menu_dialog</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
        <item name="android:width">@dimen/dimen_150dp</item>
    </style>
</resources>
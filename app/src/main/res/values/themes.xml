<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CapMobile" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color_variant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="details_texts" parent="Theme.CapMobile">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="title_text" parent="Theme.CapMobile">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:text">@string/user_name</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">@dimen/dimen_26sp</item>
    </style>

    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_layout_color</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/status_bar_color_variant</item>
    </style>
</resources>